name:                lens-prelude
version:             0.1.0
synopsis:            Alternate prelude that exports lens combinators
description:         Please see README.md
homepage:            http://www.google.com
license:             BSD3
license-file:        LICENSE
author:              Andrew Martin
maintainer:          andrew.thaddeus@gmail.com
copyright:           2015 Andrew Martin
category:            Web
build-type:          Simple
cabal-version:       >=1.10

library
    hs-source-dirs:  src
    exposed-modules: Prelude.Base
                   , Prelude.Transformers.Strict
                   , Prelude.Transformers.Strict.Types
                   , Prelude.Transformers.Lazy.Types
                   , Prelude.MTL.Types 
                   , Prelude.Lens.BasicInfix
                   , Prelude.Containers.Types
                   , Prelude.Tertullian
    ghc-options:     -Wall -fwarn-tabs -O2
    build-depends: base                          >= 4.8 && < 5
                 , transformers
                 , lens
                 , either
                 , array
                 , containers
                 , unordered-containers
                 , hashable
                 , vector
                 , mtl
                 , time

